{
  "name": "@mtpl/code-style",
  "version": "0.1.2",
  "description": "Code Style Template",
  "main": "index.js",
  "scripts": {
    "prepare": "is-ci || husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"  --fix",
    "ca": "git add -A && git-cz -av",
